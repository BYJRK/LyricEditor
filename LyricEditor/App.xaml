<Application x:Class="LyricEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LyricEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Control}">
            <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
        </Style>
        <!--歌词字体-->
        <FontFamily x:Key="LyricFont">pack://application:,,,/Fonts/#PingFang SC</FontFamily>
        <FontFamily x:Key="LyricFontBold">pack://application:,,,/Fonts/#PingFang SC Bold</FontFamily>
    </Application.Resources>
</Application>
